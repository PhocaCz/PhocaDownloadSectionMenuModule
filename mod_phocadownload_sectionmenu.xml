<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" method="upgrade" group="" version="1.5.0">
	<name>Phoca Download Section Menu Module</name>
	<creationDate>12/05/2010</creationDate>
	<author>Jan Pavelka (www.phoca.cz)</author>
	<authorEmail></authorEmail>
	<authorUrl>www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>1.3.5</version>
	<!-- The description is optional and defaults to the name -->
	<description><![CDATA[ 
       Phoca Download Section Menu Module - displays a menu of Phoca Download component's sections.<br />
       More information on <a href="http://www.phoca.cz" target="_blank" >www.phoca.cz</a>  
      ]]></description>

	<!-- Main File Copy Section -->
	<files>
		<filename module="mod_phocadownload_sectionmenu">index.html</filename>
		<filename module="mod_phocadownload_sectionmenu">mod_phocadownload_sectionmenu.php</filename>
		<filename module="mod_phocadownload_sectionmenu">mod_phocadownload_sectionmenu.xml</filename>
		<filename module="mod_phocadownload_sectionmenu">assets/index.html</filename>
		<filename module="mod_phocadownload_sectionmenu">elements/index.html</filename>
		<filename module="mod_phocadownload_sectionmenu">elements/phocadownloadsmod.php</filename>
		<filename module="mod_phocadownload_sectionmenu">elements/phocaheadmod.php</filename>
		<filename module="mod_phocadownload_sectionmenu">tmpl/default.php</filename>
		<filename module="mod_phocadownload_sectionmenu">tmpl/index.html</filename>
	</files>

<!-- Language -->
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_phocadownload_sectionmenu.ini</language>
	</languages>

	<!-- Only Development - copy ./front, ./language, ./other to admin area -->
	<files>
		<filename>language/en-GB/en-GB.mod_phocadownload_sectionmenu.ini</filename>
		<filename>other/install_xml.php</filename>
	</files>
	
	<params addpath="/modules/mod_phocadownload_sectionmenu/elements">
	
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		
		<param name="display_sections" default="" size="5" type="phocadownloadsmod" label="Display Sections" description="Display Sections DESC" multiple="true" />
		
		<param name="hide_sections" default="" size="5" type="phocadownloadsmod" label="Hide Sections" description="Hide Sections DESC" multiple="true" />
	
	</params>

</install>